<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Catcheap.Views.AddJourneyPage"
             xmlns:local="clr-namespace:Catcheap.Views"
             Title="Add a Journey">

    <VerticalStackLayout
        Padding="10">
        
        <Picker x:Name="picker"
        Title="Select a vehicle">
            <Picker.ItemsSource
                SelectedIndex="{Binding JourneyField.SelectedItem, Mode=TwoWay}">
                <x:Array Type="{x:Type x:String}">
                    <x:String>Car</x:String>
                    <x:String>Scooter</x:String>
                </x:Array>
            </Picker.ItemsSource>
        </Picker>

        <Entry Placeholder="Journey distance"
               Text="{Binding JourneyField.JourneyDistance}"/>

        <Entry Placeholder="Journey date"
               Text="{Binding JourneyField.JourneyDate}"/>

        <Button Text="Add a journey"
                Command="{Binding PostJourneys}"
                HorizontalOptions="Center"/>

    </VerticalStackLayout>
    
</ContentPage>