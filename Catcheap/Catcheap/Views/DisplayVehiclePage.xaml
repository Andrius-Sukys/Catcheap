<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Catcheap.Views.DisplayVehiclePage"
             Title="My Vehicles">
    <ScrollView>
        <VerticalStackLayout Padding="15" Spacing="20">
            <HorizontalStackLayout Spacing="5">
            <Button
                Text="Car"
                WidthRequest="111"
                Clicked="CarButtonClicked"/>
            <Label Text=""/>
            <Button
                Text="Scooter"
                WidthRequest="111"
                Clicked="ScooterButtonClicked"/>
            <Label Text=""/>
            <Button
                Text="All"
                WidthRequest="111"
                Clicked="AllButtonClicked"/>
            </HorizontalStackLayout>
            <Label 
                x:Name="Placeholder"
                Text=""/>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>