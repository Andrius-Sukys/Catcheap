<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Catcheap.Views.PricePage"
             Title="Nord Pool Price">
    <ScrollView>
        <VerticalStackLayout Spacing="10" Padding="15">

            <HorizontalStackLayout Spacing="15">
                <Button
                    Text="Current Price"
                    WidthRequest="170"
                    Clicked="LoadCurrentPriceButtonClicked"/>
                
                <Button
                    Text="Cheapest Price Today"
                    WidthRequest="170"
                    Clicked="LoadCheapestPriceButtonClicked"/>

                
            </HorizontalStackLayout>

            <Label
                Margin="0, 10, 0, 0"
                x:Name="Placeholder"
                HorizontalOptions="CenterAndExpand"
                FontSize="40"
                Text=""/>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>