<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Catcheap.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:Catcheap"
    Shell.FlyoutBehavior="Disabled">

    <TabBar>
        <ShellContent
            Title="Calculator"
            Icon="icon_calculator"
            ContentTemplate="{DataTemplate local:MainPage}"
            Route="MainPage" />

        <ShellContent
            Title="My car"
            Icon="icon_car"
            ContentTemplate="{DataTemplate local:AddCar}"
            Route="AddCar" />

        <ShellContent
            Title="History"
            Icon="icon_history"
            ContentTemplate="{DataTemplate local:History}"
            Route="AddCar" />

    </TabBar>

</Shell>
